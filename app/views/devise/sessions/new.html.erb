<h2>ログイン</h2>

<%= form_with model: @user, url:user_session_path, class:'registration-main', local: true do |f| %>
<div class="form-wrap">
  <div class="form-header">
    <h3 class="form-hesder-text">
      ユーザー情報
    </h3>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">メールアドレス</label>
      <span class="indispensabel">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placholder:"pc•携帯電話どちらでも可", autofocus: :true %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">パスワード</label>
      <span class="indispensabel">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placholder:""%>
  </div>
  <div class="login-btn">
    <%= f.submit "ログイン", class:"login-red-btn"%>
  </div>
  <div class="back-btn">
    <%= link_to '戻る', root_path, class:"back-btn-login"%>
  </div>
</div>
<% end %>

