<div class="main">
  <div class="inner">
    <div class="user__wrapper">
    <div class="option">
      <%= link_to '編集',  edit_user_path(@user.id), method: :get, class: "edit"%>
    </div>
      <div class="myinfos">
        <div class="myinfo">
          <h2 class="page-heading">
            <%= @user.nickname%>さんの情報
          </h2>
          <div class="main-table">
            <table class="table" >
              <tr>
                <th class="table-col1">名前</th>
                <td class="table-col2"><%= @user.nickname%></td>
                </tr>
                <tr>
                <th class="table-col1">プロフィール</th>
                <td class="table-col2"><%= @user.myinfo%></td>
              </tr>
            </table>
          </div>
            <h2 class="page-heading">
              <%= "#{@user.nickname}さんの投稿"%>
            </h2>
        </div>
      </div>
        <div class="mytweet">
          <%= render partial: 'tweets/tweet',collection: @tweets %>
        </div>
    </div>
  </div>
</div>